{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "group": "build",
            "command": "ninja",
            "args": [
                "-Cbuild"
            ],
            "problemMatcher": {
                "owner": "vala",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/src"
                ],
                "pattern": {
                    "regexp": "^(.*?):(\\d+)[:\\.](\\d+)(?:-(\\d+)\\.(\\d+))?:\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "endLine": 4,
                    "endColumn": 5,
                    "severity": 6,
                    "message": 7
                }
            }
        },
        {
            "label": "Compile and run",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./organiza",
            "options": {
                "cwd": "${workspaceFolder}/build/src"
            },
            "dependsOn": [
                "Compile"
            ],
            "problemMatcher": []
        }
    ]
}